@model IEnumerable<The_Academy_Leave_System.ViewModels.LeaveRequestViewModel>
@using The_Academy_Leave_System.ViewModels

@{
    ViewData["Title"] = "Index";

    if (ViewBag.Clashes != null)
    {
        string displayMessage;

        foreach (LeaveRequestViewModel lr in ViewBag.Clashes)
        {

            displayMessage = $"Leave Clash: {lr.FullName} has requested {Convert.ToDateTime(lr.ThisLeaveRequest.RequestedLeaveStartDate).ToShortDateString()} to {Convert.ToDateTime(lr.ThisLeaveRequest.RequestedLeaveEndDate).ToShortDateString()}";

            <script>
                alert('@displayMessage');
            </script>
        }
    }


